{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": "./src",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "declaration": true,
        "lib": [
            "es2017",
            "es2015",
            "es6",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
